<form class="{{cssClass}}" autocomplete="off">
  {{!-- Header --}}
  <header class="sheet-header">
    <img class="profile-img" src="{{item.img}}" data-edit="img" title="{{item.name}}" />
    <div class="header-fields">
      <h1 class="charname"><input name="name" type="text" value="{{item.name}}" placeholder="Name" /></h1>
    </div>
    <div class="item-subtitle">
      <h4 class="item-type">{{itemType}}</h4>
    </div>
  </header>

  {{!-- Navigation --}}
  <nav class="sheet-navigation tabs" data-group="primary">
    <a class="item active" data-tab="description">{{ localize "HTBAH.Description" }}</a>
  </nav>

  {{!-- Sheet Body --}}
  <section class="sheet-body">
    <div class="sidebar">
      {{!-- Value and Calculated Value Card --}}
      <div class="sidebar-card">
        <h3>Item Details</h3>
        <div class="value-field">
          <label for="item-value">Value:</label>
          <input id="item-value" name="system.value" type="number" value="{{item.system.value}}" placeholder="Enter value" />
        </div>
        <div class="calculated-value-field">
          <label for="item-calculated-value">Calculated Value:</label>
          <span id="item-calculated-value">{{item.system.calculatedValue}}</span>
        </div>
        {{!-- Add Roll Fields --}}
        <div class="roll-fields">
          <label for="roll-dice-num">Number of Dice:</label>
          <input id="roll-dice-num" name="system.roll.diceNum" type="number" value="{{item.system.roll.diceNum}}" min="1" />
          
          <label for="roll-dice-size">Dice Size:</label>
          <select id="roll-dice-size" name="system.roll.diceSize">
            {{selectOptions diceTypes selected=item.system.roll.diceSize}}
          </select>
          
          <label for="roll-dice-bonus">Bonus:</label>
            <div class="bonus-input-group">
              <input id="roll-dice-bonus" type="number" name="system.roll.diceBonus" value="{{item.system.roll.diceBonus}}">
              <i class="fa-solid fa-circle-plus" data-action="incrementBonus"></i>
              <i class="fa-solid fa-circle-minus" data-action="decrementBonus"></i>
            </div>
        </div>
      </div>
    </div>

    <div class="main-content">
      <div class="tab description" data-group="primary" data-tab="description">
        {{editor name="item.system.description" target="system.description" button=true owner=owner editable=editable}}
      </div>
    </div>
  </section>
</form>