<form class="interactable {{actor.type}} flexcol" autocomplete="off"> {{!-- {{actor.type}} --}}

  {{!-- Sheet Header --}}
  <header class="sheet-header">
    {{!-- Left Column - Name --}}
    <div class="header-left">
      {{#if editable}}
      <input type="text" name="name" class="document-name uninput" value="{{ actor.name }}">
      {{else}}
      <div class="document-name">{{ actor.name }}</div>
      {{/if}}
    </div>

    {{!-- Center Column - Box --}}
    <div class="header-center">
      <div class="center-box">
        {{!-- Initiative Column --}}
        <div class="header-stat-column">
          <div class="stat-header">Initiative</div>
          <div class="stat-content">
            <!-- Content for Initiative -->
          </div>
        </div>

        {{!-- Skill Column --}}
        <div class="header-stat-column">
          <div class="stat-header">Skill</div>
          <div class="stat-content">
            <!-- Content for Skill -->
          </div>
        </div>

        {{!-- Weapon Column --}}
        <div class="header-stat-column">
          <div class="stat-header">Weapon</div>
          <div class="stat-content">
            <!-- Content for Weapon -->
          </div>
        </div>
      </div>
    </div>

    {{!-- Right Column --}}
    <div class="header-right">
      <!-- Add content for the right column here -->
    </div>
  </header>


  {{!-- Sheet Body --}}
  <section class="sheet-body">

    {{!-- Main Content --}}
    <div class="main-content">
      {{!-- Sidebar --}}
      <div class="sidebar">

        {{!-- Character Card --}}
        <div class="card">
          {{!-- Collapser 
          <button type="button" class="collapser card-tab vertical unbutton interface-only" {{#if sidebarCollapsed}}
            data-tooltip="JOURNAL.ViewExpand" aria-label="{{ localize " JOURNAL.ViewExpand" }}" {{else}}
            data-tooltip="JOURNAL.ViewCollapse" aria-label="{{ localize " JOURNAL.ViewCollapse" }}" {{/if}}>
            <i class="fas fa-caret-{{#if sidebarCollapsed}}right{{else}}left{{/if}}"></i>
          </button>
          --}}
          {{!-- Portrait --}}
          <div class="portrait {{#if portrait.token}}token{{/if}}">
            {{!--
            {{#if editable}}
            <label class="slide-toggle roboto-upper">
              <input type="checkbox" name="flags.htbah.showTokenPortrait" {{ checked portrait.token }}>
              {{#if portrait.token}}
              <i class="fas fa-toggle-on"></i>
              {{ localize "DOCUMENT.Token" }}
              {{else}}
              <i class="fas fa-toggle-off"></i>
              {{ localize "HTBAH.Portrait" }}
              {{/if}}
            </label>
            {{/if}}
            --}}
            <img src="{{ portrait.src }}" alt="{{ actor.name }}" {{#if (and editable
              portrait.path)}}data-edit="{{ portrait.path }}" {{/if}}>
          </div>
          <div class="stats">

            {{!-- AC & Exhaustion --}}
            <div class="top">
                {{!-- AC --}}
                <div class="ac" aria-label="{{ localize "HTBAH.ArmorClass" }}">
                    {{!--
                    {{#if editable}}
                    <a class="config-button" data-action="armor" data-tooltip="HTBAH.ArmorConfig"
                      aria-label="{{ localize "HTBAH.ArmorConfig" }}">
                        <i class="fas fa-cog"></i>
                    </a>
                    {{else}}
                    --}}
                    <div data-attribution="attributes.armor" data-attribution-caption="HTBAH.ArmorClass"
                        data-tooltip-direction="DOWN">
                        <input type="text" name="system.baseattributes.armor.value" data-dtype="Number" placeholder="0"
                        value="{{ system.baseattributes.armor.value }}">
                    </div>
                </div>
                {{!-- Inspiration & Button --}}
                <div class="right">
                {{!-- Value of the Inspiration --}}
                <div class="inspirationValue" aria-label="{{ localize "HTBAH.InspirationValue" }}">
                        <input type="text" name="system.baseattributes.inspiration.value" data-dtype="Number" placeholder="0"
                        value="{{ system.baseattributes.inspiration.value }}"></div>

                  {{!-- Inspiration --}}
                  <button type="button" class="inspiration unbutton" data-action="toggleInspiration" aria-label="{{ localize "
                    HTBAH.Inspiration" }}" data-tooltip="HTBAH.Inspiration"
                    aria-pressed="{{ system.baseattributes.inspiration.status }}"></button>

                </div>
            </div>
            {{!-- Hit Points --}}
            <div class="meter-group">
              <div class="label roboto-condensed-upper">
                <span>{{ localize "HTBAH.HitPoints" }}</span>
                {{!--
                {{#if editable}}
                <a class="config-button" data-action="hitPoints" data-tooltip="HTBAH.HitPointsConfig"
                  aria-label="{{ localize " HTBAH.HitPointsConfig" }}">
                  <i class="fas fa-cog"></i>
                </a>
                {{/if}}
                --}}
              </div>
                {{#with system.baseattributes.health}}
              <div class="meter sectioned hit-points">
                <div class="progress hit-points
                            {{~#if (gt tempmax 0)}} temp-positive
                            {{~else if (lt tempmax 0)}} temp-negative{{/if}}" role="meter" aria-valuemin="0"
                  aria-valuenow="{{ value }}" aria-valuemax="{{ max }}" style="--bar-percentage: {{ ../healthPercentage }}%">
                  <div class="label">
                    <input type="text" name="system.baseattributes.health.value" class="uninput value" 
                          data-dtype="Number" value="{{ value }}" placeholder="0">
                    <span class="separator">&sol;</span>
                    <input type="text" name="system.baseattributes.health.max" class="uninput max" 
                          data-dtype="Number" value="{{ max }}" placeholder="0">
                    {{#if tempmax}}
                    <span class="bonus">{{numberFormat tempmax signDisplay="always"}}</span>
                    {{/if}}
                  </div>
                </div>
                <div class="tmp">
                  <input type="text" name="system.baseattributes.health.temp" data-dtype="Number" 
                        placeholder="{{ localize "HTBAH.TMP" }}" value="{{ temp }}">
                </div>
              </div>
              {{/with}}
            </div>
          </div>

        </div>
        {{!-- Favorites --}}
        <div class="favorites">
            <h3 class="icon">
                <i class="fas fa-star"></i>
                <span class="roboto-upper">{{ localize "HTBAH.Favorites" }}</span>
            </h3>
            <ul class="unlist">
                {{#each favorites}}

                {{!-- Favorite --}}
                <li class="{{#if itemId}}item-tooltip{{/if}} {{ type }} {{#if suppressed}}suppressed{{/if}}"
                    data-favorite-id="{{ id }}" {{#if key}}data-key="{{ key }}"{{/if}}
                    {{#if itemId}}data-item-id="{{ itemId }}"{{/if}}
                    {{#if effectId}}data-effect-id="{{ effectId }}"{{/if}}
                    {{#if parentId}}data-parent-id="{{ parentId }}"{{/if}}
                    {{#if reference}}data-reference-tooltip="{{ reference }}"{{/if}}
                    {{#if toggle.applicable}}data-action="useFavorite"{{/if}}>

                    {{!-- Icon --}}
                    <figure>
                        <img class="gold-icon" alt="{{ title }}" src="{{ img }}">

                        {{!-- Favorite Deletion --}}
                        {{#if @root.editable}}
                        <a class="deletion-control" data-action="removeFavorite" data-tooltip-class
                            data-tooltip-direction data-tooltip="{{ localize "HTBAH.FavoriteRemove" }}"
                            aria-label="{{ localize "HTBAH.FavoriteRemove" }}">
                            <i class="fas fa-circle-xmark"></i>
                        </a>
                        {{/if}}
                    </figure>

                    {{!-- Name --}}
                    <div class="name-stacked {{ rollableClass }}"
                          role="button" data-action="useFavorite">
                        <span class="title">{{ title }}</span>
                        {{#if subtitle}}
                        <span class="subtitle">{{{ subtitle }}}</span>
                        {{/if}}
                    </div>

                    {{!-- Info --}}
                    <div class="info">
                        <div class="primary {{ css }}">
                            {{!-- Item Uses & Capacity --}}
                            {{#if uses}}
                            {{#with uses}}
                            {{#if (and name @root.actor.isOwner)}}
                            <input type="text" class="uninput value" value="{{ value }}"
                                    {{#unless ../bareName}}data-{{/unless}}name="{{ name }}"
                                    data-dtype="Number" inputmode="numeric" pattern="[0-9+=\-]*">
                            {{else}}
                            <span class="value">{{ value }}</span>
                            {{/if}}
                            <span class="separator">&sol;</span>
                            <span class="max">{{ max }}</span>
                            {{/with}}

                            {{!-- Other Value --}}
                            {{else if value includeZero=true}}
                            <span class="value">{{ value }}</span>

                            {{!-- Quantity --}}
                            {{else if quantity}}
                            <span class="sign">&times;</span>
                            <span class="value">{{ quantity }}</span>

                            {{!-- Toggleable --}}
                            {{else if toggle.applicable}}
                            <i class="fas fa-toggle-{{#if toggle.value}}on{{else}}off{{/if}}"></i>
                            {{/if}}
                        </div>
                        <div class="secondary">
                            {{!-- Quantity --}}
                            {{#if (and uses quantity)}}
                            <span class="quantity">&times; {{ quantity }}</span>

                            {{!-- Range --}}
                            {{else if range.value}}
                            {{#with range}}
                            <span class="range">
                                {{ value }}
                                {{#if long}}&sol; {{ long }}{{/if}}
                                {{ units }}
                            </span>
                            {{/with}}
                            {{/if}}
                        </div>
                    </div>

                </li>

                {{/each}}

                {{!-- Drop Indicator --}}
                <li class="drop roboto-upper">{{ localize "HTBAH.FavoriteDrop" }}</li>
            </ul>
        </div>
      </div>
      {{!-- Tabbed Content --}}
      <section class="tab-body">

      {{!-- Character Details --}}
        {{!-- Details Tab --}}
        <div class="tab details" data-group="primary" data-tab="details">
          {{> "htbah.character-details" }}
        </div>

        {{!-- Inventory Tab --}}
        <div class="tab inventory" data-group="primary" data-tab="inventory">
          {{> "htbah.character-inventory" }}
        </div>

        {{!-- Effects Tab --}}
        <div class="tab effects" data-group="primary" data-tab="effects">
          {{> "htbah.character-effects" }}
        </div>

        {{!-- Biography Tab --}}
        <div class="tab biography" data-group="primary" data-tab="biography">
          {{~> "htbah.character-biography" ~}}
        </div>

      </section>
    </div>
    
      {{!-- Child Creation --}}
      <button type="button" class="create-child gold-button" aria-label="{{ " SIDEBAR.Create"
        type=(localize "DOCUMENT.Item" ) }}">
        <i class="fas fa-plus"></i>
      </button>
  </section>
</form>

